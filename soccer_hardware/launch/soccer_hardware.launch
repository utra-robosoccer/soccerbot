<launch>
    <node name="soccer_hardware" pkg="soccer_hardware" type="soccer_hardware.py" output="screen" cwd="node">
        <param name="port"      value="/dev/ttyACM0" />
        <param name="baud_rate" value="230400" />
        <rosparam command="load" file="$(find soccer_description)/config/soccerbot_control.yaml" />
        <rosparam command="load" file="$(find soccer_hardware)/config/motor_mapping.yaml" />
    </node>
</launch>
